<Window x:Class="Poker.Client.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Poker" Height="900" Width="1400"
        Background="#0E1B14" Icon="/poker.ico">

    <Window.Resources>

        <!-- Карта -->
        <DataTemplate x:Key="CardTemplate">
            <Border Width="56" Height="78" CornerRadius="10"
                    Background="#FAFAFA" BorderBrush="#D0D0D0" BorderThickness="1"
                    Margin="4" Padding="6">
                <TextBlock Text="{Binding Text}" FontSize="20" FontWeight="SemiBold"
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#111111"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRed}" Value="True">
                                    <Setter Property="Foreground" Value="#C01818"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </DataTemplate>

        <!-- Подсветка строки игрока -->
        <Style x:Key="PlayerRowBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Background" Value="#172821"/>
            <Setter Property="BorderBrush" Value="#2D4A3F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>

                <!-- Победитель -->
                <DataTrigger Binding="{Binding IsWinner}" Value="True">
                    <Setter Property="Background" Value="#2A2B4F"/>
                    <Setter Property="BorderBrush" Value="#7C5CFF"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </DataTrigger>

                <!-- Ход -->
                <DataTrigger Binding="{Binding IsTurn}" Value="True">
                    <Setter Property="Background" Value="#24473B"/>
                    <Setter Property="BorderBrush" Value="#49A078"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>

                <!-- Это я -->
                <DataTrigger Binding="{Binding IsMe}" Value="True">
                    <Setter Property="BorderBrush" Value="#F0C040"/>
                </DataTrigger>

                <!-- Мой ход -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsMe}" Value="True"/>
                        <Condition Binding="{Binding IsTurn}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#2C5B47"/>
                    <Setter Property="BorderBrush" Value="#FFD36A"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </MultiDataTrigger>

            </Style.Triggers>
        </Style>

        <!-- Глобально светлый текст -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6F2EC"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

    </Window.Resources>

    <Grid Margin="14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ЧАСТЬ -->
        <Border Grid.Column="0" CornerRadius="14" Padding="14"
                Background="#14251E" BorderBrush="#2D4A3F" BorderThickness="1">
            <StackPanel>

                <!-- Верхняя панель -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock FontSize="18" FontWeight="SemiBold"
                                   Text="{Binding RoomId, StringFormat=Комната: {0}}" />
                        <TextBlock Foreground="#B8D6C9"
                                   Text="{Binding HandId, StringFormat=Раздача: {0}}"/>
                        <TextBlock Foreground="#B8D6C9"
                                   Text="{Binding Street, StringFormat=Этап: {0}}"/>
                    </StackPanel>

                    <!-- ТВОЙ ХОД -->
                    <Border Grid.Column="1" Margin="12,0,0,0" CornerRadius="12" Padding="12,8"
                            Background="#26352F" BorderBrush="#3B5E50" BorderThickness="1">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMyTurn}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="Background" Value="#2C5B47"/>
                                        <Setter Property="BorderBrush" Value="#FFD36A"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="ТВОЙ ХОД" FontWeight="Bold" FontSize="16"
                                   Foreground="#FFD36A"/>
                    </Border>

                    <!-- БАННЕР ПОБЕДЫ -->
                    <Border Grid.Column="2" Margin="12,0,0,0" CornerRadius="12" Padding="12,8"
                            Background="#2A2B4F" BorderBrush="#7C5CFF" BorderThickness="2">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowdownBannerVisible}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding ShowdownBannerText}" FontWeight="Bold" FontSize="14"
                                   Foreground="#EDEBFF"/>
                    </Border>
                </Grid>

                <!-- Пот/ставка -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border CornerRadius="10" Padding="10,8" Background="#172821" BorderBrush="#2D4A3F" BorderThickness="1" Margin="0,0,8,0">
                        <TextBlock Text="{Binding Pot, StringFormat=Банк: {0}}" FontWeight="SemiBold"/>
                    </Border>
                    <Border CornerRadius="10" Padding="10,8" Background="#172821" BorderBrush="#2D4A3F" BorderThickness="1">
                        <TextBlock Text="{Binding CurrentBet, StringFormat=Текущая ставка: {0}}" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Board -->
                <TextBlock FontWeight="SemiBold" Text="Карты на столе:" Margin="0,6,0,4"/>
                <ItemsControl ItemsSource="{Binding BoardCards}" ItemTemplate="{StaticResource CardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Players -->
                <TextBlock FontWeight="SemiBold" Text="Игроки:" Margin="0,14,0,4"/>

                <!-- Заголовок таблицы -->
                <Border CornerRadius="10" Padding="10,8" Background="#102019" BorderBrush="#2D4A3F" BorderThickness="1" Margin="0,0,0,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="170"/>
                            <!-- 2 карты -->
                            <ColumnDefinition Width="320"/>
                            <!-- рука -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- ход -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Игрок" FontWeight="Bold" Foreground="#B8D6C9"/>
                        <TextBlock Grid.Column="1" Text="Стек"  FontWeight="Bold" Foreground="#B8D6C9"/>
                        <TextBlock Grid.Column="2" Text="Ставка" FontWeight="Bold" Foreground="#B8D6C9"/>
                        <TextBlock Grid.Column="3" Text="Статус" FontWeight="Bold" Foreground="#B8D6C9"/>
                        <TextBlock Grid.Column="4" Text="Карты" FontWeight="Bold" Foreground="#B8D6C9"/>
                        <TextBlock Grid.Column="5" Text="Рука" FontWeight="Bold" Foreground="#B8D6C9"/>
                    </Grid>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="340">
                    <ItemsControl ItemsSource="{Binding Players}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource PlayerRowBorder}">
                                    <Grid>
                                        <Grid.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#E6F2EC"/>
                                            </Style>
                                        </Grid.Resources>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="170"/>
                                            <!-- 2 карты -->
                                            <ColumnDefinition Width="320"/>
                                            <!-- рука -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- ход -->
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Stack, StringFormat= {}{0}}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding BetThisStreet, StringFormat= {}{0}}"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Status}"/>

                                        <!-- Две карты на шоудауне (если Reveal1/Reveal2 != null) -->
                                        <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                            <ContentControl Content="{Binding Reveal1}" ContentTemplate="{StaticResource CardTemplate}">
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Reveal1}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>

                                            <ContentControl Content="{Binding Reveal2}" ContentTemplate="{StaticResource CardTemplate}">
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Reveal2}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>
                                        </StackPanel>

                                        <!-- Рука на шоудауне -->
                                        <TextBlock Grid.Column="5"
                                                   Text="{Binding ShowdownHand}"
                                                   Foreground="#B8D6C9"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"/>

                                        <!-- ХОД -->
                                        <TextBlock Grid.Column="6" Margin="12,0,0,0"
                                                   Foreground="#FFD36A" FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Text="ХОД">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsTurn}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- My cards -->
                <TextBlock FontWeight="SemiBold" Text="Мои карты:" Margin="0,14,0,4"/>
                <ItemsControl ItemsSource="{Binding MyHoleCards}" ItemTemplate="{StaticResource CardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <TextBlock Margin="0,12,0,0" Foreground="#B8D6C9" Text="{Binding Message}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- ПРАВАЯ ЧАСТЬ -->
        <Border Grid.Column="1" Margin="14,0,0,0" CornerRadius="14" Padding="14"
                Background="#14251E" BorderBrush="#2D4A3F" BorderThickness="1">
            <StackPanel>

                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Подключение" />
                <TextBlock Margin="0,6,0,0" Foreground="#B8D6C9" Text="Server URL"/>
                <TextBox Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Margin="0,6,0,0" Foreground="#B8D6C9" Text="Room"/>
                <TextBox Text="{Binding RoomId, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Margin="0,6,0,0" Foreground="#B8D6C9" Text="Name"/>
                <TextBox Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Connect + Join" Click="ConnectJoin_Click"/>

                <Separator Margin="0,12,0,12"/>

                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Действия" />
                <Button Content="Start Hand" Click="StartHand_Click"/>
                <Button Content="Fold" Click="Fold_Click"/>
                <Button Content="Check" Click="Check_Click"/>
                <Button Content="Call" Click="Call_Click"/>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBox x:Name="RaiseBox" Width="90" />
                    <Button Margin="8,0,0,0" Content="Raise" Click="Raise_Click"/>
                </StackPanel>

                <Separator Margin="0,12,0,12"/>

                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Лог" />
                <ListBox ItemsSource="{Binding Log}" Height="260"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
